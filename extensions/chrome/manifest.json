{
  "manifest_version": 3,
  "name": "AngelClaw AGI Guardian",
  "version": "1.2.0",
  "description": "Secure browser companion for AngelClaw AGI Guardian â€” your autonomous AI security guardian.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8500/*", "https://localhost:8500/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  }
}
