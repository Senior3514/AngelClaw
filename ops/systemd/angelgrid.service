[Unit]
Description=AngelGrid Stack (ANGELNODE + Cloud + Ollama)
Documentation=https://github.com/Senior3514/AngelGrid
After=docker.service network-online.target
Requires=docker.service
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/root/AngelGrid/ops
EnvironmentFile=-/root/AngelGrid/ops/config/angelgrid.env
ExecStart=/usr/bin/docker-compose up -d --build
ExecStop=/usr/bin/docker-compose down --timeout 30
ExecReload=/usr/bin/docker-compose up -d --build
StandardOutput=journal
StandardError=journal
SyslogIdentifier=angelgrid
TimeoutStartSec=300
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
